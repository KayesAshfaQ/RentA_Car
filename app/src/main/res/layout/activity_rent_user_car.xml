<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user_rent.RentUserCarActivity">

    <!--toolbar-->
    <LinearLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimaryDark"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </com.google.android.material.appbar.AppBarLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/product_image"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/car" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:fontFamily="@font/carrois_gothic"
                android:textColor="@color/colorPrimaryDark"
                android:text="Your Car Information"/>

            <!--fill-ups-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">


                <EditText
                    android:id="@+id/model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_car_rent"
                    android:drawableStart="@drawable/ic_baseline_directions_car"
                    android:drawablePadding="10dp"
                    android:hint="Car Model"
                    android:inputType="text"
                    android:padding="15dp" />

                <EditText
                    android:id="@+id/brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/shape_car_rent"
                    android:drawableStart="@drawable/ic_baseline_directions_car"
                    android:drawablePadding="10dp"
                    android:hint="Car Brand"
                    android:inputType="text"
                    android:padding="15dp" />

                <EditText
                    android:id="@+id/car_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape_car_rent"
                    android:drawableStart="@drawable/ic_baseline_directions_car"
                    android:drawablePadding="10dp"
                    android:hint="Car Number"
                    android:inputType="textCapCharacters"
                    android:padding="15dp" />

                <EditText
                    android:id="@+id/seat_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape_car_rent"
                    android:drawableStart="@drawable/ic_car_seat"
                    android:drawablePadding="10dp"
                    android:hint="Number of seats"
                    android:inputType="number"
                    android:padding="15dp" />

                <EditText
                    android:id="@+id/fare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape_car_rent"
                    android:drawableStart="@drawable/ic_doller"
                    android:drawablePadding="10dp"
                    android:hint="Fare per Hour"
                    android:inputType="numberDecimal"
                    android:padding="15dp" />


                <EditText
                    android:id="@+id/driver_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape_car_rent"
                    android:drawableStart="@drawable/ic_person_dark"
                    android:drawablePadding="10dp"
                    android:hint="Driver Name"
                    android:inputType="text"
                    android:padding="15dp" />

                <EditText
                    android:id="@+id/mobile_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape_car_rent"
                    android:drawableStart="@drawable/ic_mobile_no_dark"
                    android:drawablePadding="10dp"
                    android:hint="Mobile Number"
                    android:inputType="number"
                    android:padding="15dp" />

                <EditText
                    android:padding="5dp"
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="start"
                    android:background="@drawable/shape_car_rent"
                    android:drawablePadding="10dp"
                    android:hint="Additional Information"
                    android:inputType="number"
                    android:minHeight="180dp" />


                <Button
                    android:id="@+id/confirm_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shapesignup"
                    android:padding="15dp"
                    android:shadowColor="@android:color/transparent"
                    android:text="Confirm"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>